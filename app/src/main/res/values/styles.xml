<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_search_category_default</item>
    </style>

    <!--Popump 动画-->

    <style name="animTranslate_down">
        <item name="android:windowEnterAnimation">@anim/translate_in_down</item>
        <item name="android:windowExitAnimation">@anim/translate_out_down</item>
    </style>

    <style name="animTranslate_top">
        <item name="android:windowEnterAnimation">@anim/translate_in_top</item>
        <item name="android:windowExitAnimation">@anim/translate_out_top</item>
    </style>

    <style name="animScale">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>


    <!--参数设置界面 更改状态栏颜色-->
    <style name="AppThemeStatues" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/AppBarLayout</item>
    </style>

    <style name="AppThemeStatuesSearchMenu" parent="AppThemeStatues">
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <!--Activity  右侧滑入-->
